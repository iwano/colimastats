#markers
  %table#markers
    - @locations.each do |location|
      %tr{:id => location.id}
        %th= link_to location.name, '/', class: 'show_marker_stats'
        %td 
          %a{:href => "/", :class => "marker-details"} Detalles
        -if location.name != 'Total de la Entidad'
          %td= link_to 'Borrar', location, method: :delete, data: { confirm: 'Estas seguro?' }, remote: true